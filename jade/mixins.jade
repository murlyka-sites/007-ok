mixin posts-item(images, tag, color, type, title, desc)
	.posts__item
		.posts__item-pr
			img(src="images/#{images}", alt="#{title}", width="420", height="280")
		a.posts__item-tag(href="#tag", style="#{color}")
			| #{tag}
		if type
			.posts__item-type
				| #{type}

		a.posts__item-inner(href="#")
			.posts__item-title
				| #{title}
			.posts__item-desc
				| #{desc}


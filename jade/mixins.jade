mixin affiche-item-small(images, date, title, subclass)
	.affiche-small__item
		a.link-none(href="#")
			.affiche-small__item-pr
				img(src="images/#{images}", alt="#{title}", widht="170", width="251")
			time.affiche-small__item-date(datetime="ГГГГ-ММ-ДДTчч:мм:сс±чч:мм")
				| #{date}
			.affiche-small__item-title
				| #{title}

